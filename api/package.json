{
  "name": "pi-server",
  "version": "1.0.0",
  "description": "simple raspberry pi web server running nodejs",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node -r dotenv/config build/src/index.js",
    "test": "npm run build && mocha -r dotenv/config build/test/*.js",
    "build": "tsc",
    "tsc": "tsc",
    "debug": "ts-node-dev --respawn --transpileOnly ./src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/user2745/pi-server.git"
  },
  "keywords": [
    "raspberry-pi",
    "nodejs",
    "server",
    "pi",
    "pi-server"
  ],
  "author": "Kevin Kamto",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/user2745/pi-server/issues"
  },
  "homepage": "https://github.com/user2745/pi-server#readme",
  "dependencies": {
    "@google/maps": "^1.0.2",
    "@types/es6-promise": "^3.3.0",
    "@types/express": "^4.17.6",
    "@types/node": "^13.13.5",
    "axios": "^0.19.1",
    "express": "^4.17.3",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  },
  "test-unit": "NODE_ENV=test mocha '/**/*.spec.js'",
  "devDependencies": {
    "@types/bent": "^7.0.2",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/pino": "^6.0.1",
    "@types/request": "^2.48.5",
    "bent": "^7.3.2",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "mocha": "^6.2.3",
    "pino": "^6.3.1",
    "request": "^2.88.2",
    "supertest": "^4.0.2"
  }
}
